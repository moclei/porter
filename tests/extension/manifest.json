{
  "manifest_version": 3,
  "name": "Porter Tests",
  "version": "1.0.30",
  "description": "A test extension for Porter",
  "permissions": [
    "tabs",
    "storage",
    "scripting",
    "favicon",
    "contextMenus",
    "sidePanel"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "scripts/content.js"
      ]
    }
  ],
  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  },
  "default_popup": "popup/popup.html",
  "web_accessible_resources": [
    {
      "resources": [
        "test2.png"
      ],
      "matches": [
        "*://*/*"
      ]
    }
  ],
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "action": {
    "default_icon": {
      "16": "images/icon-16.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  }
}